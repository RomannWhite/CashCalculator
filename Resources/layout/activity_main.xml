
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/SelectDateFrame"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/MonthName"
                android:layout_height="57dp"
                android:layout_width="wrap_content"
                android:text="Ноябрь"
                android:layout_gravity="bottom|left"
                android:textColor="#fff"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />
            <TextView
                android:id="@+id/YearName"
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:text="2019"
                android:layout_gravity="top|right"
                android:textColor="#fff"
                android:textSize="18dp"/>
        </FrameLayout>
        <ImageButton
            android:id="@+id/Settings"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/SettingsButtonBackground"
            android:scaleType="fitCenter"
            android:padding="7dp"
            android:src="@drawable/settingsbutton"
            android:layout_gravity="top|right"
            android:layout_marginRight="5dp" />
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Пн"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Вт"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ср"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Чт"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Пт"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Сб"
                android:textColor="@color/color_Red"
                android:textSize="22dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Вс"
                android:textColor="@color/color_Red"
                android:textSize="22dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Week1"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/Week2"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/Week3"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/Week4"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Week5"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/Week6"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:layout_weight="2"
            android:id="@+id/MinusButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/buttonbackground"
            android:src="@drawable/minus"
            android:scaleType="fitCenter"
            android:padding="19dp"
            android:layout_gravity="left"
            android:layout_margin="0.5dp"/>
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/AllSalary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:enabled="false"
                android:text="30000"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:background="@null"
                android:layout_gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>
            <View
                android:id="@+id/AllSalaryMask"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#01FFFFFF"
                android:layout_gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>
        </FrameLayout>
        <ImageButton
            android:layout_weight="2"
            android:id="@+id/PlusButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/buttonbackground"
            android:src="@drawable/plus"
            android:scaleType="fitCenter"
            android:padding="19dp"
            android:layout_gravity="right"
            android:layout_margin="0.5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/ResultSalary"
        android:text="30000 = 1500 * 20 + 1500 * 0 * 2"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>