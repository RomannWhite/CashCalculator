
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_height="57dp"
                android:layout_width="wrap_content"
                android:text="Cash calculator"
                android:layout_gravity="bottom|left"
                android:textColor="#fff"
                android:textSize="35dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_height="25dp"
                android:layout_width="wrap_content"
                android:text="@string/linktome"
                autoLink="web"
                android:layout_gravity="top|right"
                android:textColor="#fff"
                android:textSize="18dp"/>
        </FrameLayout>
        <ImageButton
            android:id="@+id/BackButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/CorneredButtonBackground"
            android:scaleType="fitCenter"
            android:padding="7dp"
            android:src="@drawable/backbutton"
            android:layout_gravity="left|center"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Зарплата за месяц:"
                android:textColor="#fff"
                android:textSize="18dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/Salary"
                android:background="#2fff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="30000"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:textSize="18dp"
                android:gravity="left|center"
                android:layout_marginLeft="130dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Стоимость переработки:"
                android:textColor="#fff"
                android:textSize="18dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/OverWorkCoefficient"
                android:background="#2fff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="2"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:paddingLeft="5dp"
                android:textColor="#fff"
                android:textSize="18dp"
                android:gravity="left|center"
                android:layout_marginLeft="130dp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Сохранять изменения:"
                android:textColor="#fff"
                android:textSize="18dp"
                android:gravity="center"/>
            <Switch
                android:id="@+id/SaveSettings"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="130dp" />
            <View
                android:background="#2fff"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>